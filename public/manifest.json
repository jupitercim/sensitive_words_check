{
  "short_name": "Sensitive Word Check",
  "name": "Sensitive Word Check",
  "manifest_version": 3,
  "version": "1.0.1",
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["static/css/content.css"],
      "js": ["static/js/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions":
  [
    "contextMenus",
    "cookies",
    "tabs",
    "activeTab",
    "notifications",
    "webRequest",
    "storage",
    "scripting",
    "debugger",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["/images/search.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["insert.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/image/search.png",
      "32": "/image/search.png",
      "48": "/image/search.png",
      "128": "/image/search.png"
    },
    "default_title": "Sensitive Word Check"
  }
}
